generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

// Todo feature
model Todo {
  id          String    @id @default(cuid())
  title       String
  description String?
  status      Status    @default(TODO)
  archived    Boolean   @default(false)
  priority    Priority  @default(MEDIUM)
  dueDate     DateTime?
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  categoryId  String?
  category    Category? @relation(fields: [categoryId], references: [id], onDelete: SetNull)
  labels      Label[]

  @@index([status])
  @@index([archived])
  @@index([priority])
  @@index([dueDate])
  @@index([categoryId])
  @@index([order])
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String   @default("#6366f1")
  icon      String?
  todos     Todo[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Label {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String   @default("#22c55e")
  todos     Todo[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Note {
  id        String   @id @default("default")
  content   String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  TODO
  IN_PROGRESS
  WAITING
  ON_HOLD
  COMPLETED
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}
