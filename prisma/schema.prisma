generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
}

model Todo {
  id          String    @id @default(cuid())
  taskNumber  Int       @unique @default(autoincrement())
  title       String
  description String?
  priority    Priority  @default(MEDIUM)
  dueDate     DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  categoryId  String?
  order       Int       @default(0)
  archived    Boolean   @default(false)
  status      Status    @default(TODO)
  category    Category? @relation(fields: [categoryId], references: [id])
  labels      Label[]   @relation("LabelToTodo")

  @@index([status])
  @@index([archived])
  @@index([priority])
  @@index([dueDate])
  @@index([categoryId])
  @@index([order])
}

model Category {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String   @default("#6366f1")
  icon      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  todos     Todo[]
}

model Label {
  id        String   @id @default(cuid())
  name      String   @unique
  color     String   @default("#22c55e")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  todos     Todo[]   @relation("LabelToTodo")
}

model Note {
  id        String   @id @default("default")
  content   String   @default("")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status {
  TODO
  IN_PROGRESS
  WAITING
  ON_HOLD
  COMPLETED
}

model NotebookNote {
  id        String   @id @default(cuid())
  title     String   @default("Untitled")
  content   String   @default("")
  pinned    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([updatedAt])
  @@index([pinned])
}

enum Priority {
  LOW
  MEDIUM
  HIGH
  URGENT
}
